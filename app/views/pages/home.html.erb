
<% if SiteDocument.active.where(slug: "profile_background_image").exists? && SiteDocument.active.where(slug: "profile_background_image").first.document.present? %>
  <header class="main-header" style="background-image: url(<%= rails_blob_path(SiteDocument.active.where(slug: "profile_background_image").first.document, disposition: "attachment", only_path: true) %>)">
<% else %>
  <header class="main-header" style="background-image: url(<%= asset_path('img_bg_header.jpg')%>)">
<% end %>
  <div class="container">
    <div class="row personal-profile">
      <div class="col-md-4 personal-profile__avatar">
        <% if SiteDocument.active.where(slug: "profile_image").exists? && SiteDocument.active.where(slug: "profile_image").first.document.present? %>
          <%= image_tag SiteDocument.active.where(slug: "profile_image").first.document %>
        <% else %>
          <img class="" src="<%= asset_path('img_avatar.png')%>" alt="avatar">
        <% end %>
      </div>
      <div class="col-md-8">
        <p class="personal-profile__name"><%= Setting.profile_name %></p>
        <p class="personal-profile__work"><%= Setting.profile_work %></p>
        <div class="personal-profile__contacts">
          <dl class="contact-list contact-list__opacity-titles">
            <dt>Age:</dt>
            <dd><%= Setting.profile_age %></dd>
            <dt>Phone:</dt>
            <dd><a href="tel:<%= Setting.profile_phone %>"><%= number_to_phone(Setting.profile_phone, area_code: true, country_code: 94)  %></a></dd>
            <dt>Email:</dt>
            <dd><a href="mailto:<%= Setting.profile_email %>"><%= Setting.profile_email %></a></dd>
            <dt>Address:</dt>
            <dd><%= Setting.profile_address %></dd>
          </dl>
        </div>
        <% if SocialLink.active.where(link_type: :any).or(SocialLink.active.where(link_type: :profile)).any? %>
        <p class="personal-profile__social">
          <% SocialLink.active.where(link_type: :any).or(SocialLink.active.where(link_type: :profile)).order(:order).each do |social| %>
            <a href="<%= social.link %>" target="_blank"><i class="<%= social.icon_text %>"></i></a>
          <% end %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
<% if SiteDocument.active.where(slug: "profile_background_image").exists? && SiteDocument.active.where(slug: "profile_background_image").first.document.present? %>
  </header>
<% else %>
  </header>
<% end %>
