<script>
  $( document ).on('turbolinks:load', function() {
    var waypoint = new Waypoint({
      element: document.getElementById('js-progress-list'),
      handler: function() {
        $(".progress-bar").each(function () {
          $(this).animate({
            width: $(this).attr('aria-valuenow') + '%'
          }, 200);
        });
        this.destroy();
      },
      offset: '75%'
    })
  });
</script>