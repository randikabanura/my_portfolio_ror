<% if SiteImage.active.where(slug: "contact_background_image").exists? && SiteImage.active.where(slug: "contact_background_image")&.first&.image&.url&.present? %>
  <div class="background slider-carousel" style="background-image: url(<%= rails_blob_path(SiteImage.active.where(slug: "contact_background_image").first.image.url, disposition: "attachment", only_path: true) %>)">
<% else %>
  <div class="background" style="background-image: url(<%= asset_path('img_bg_main.jpg') %>">
<% end %>
  <div id="contact" class="container section">
    <div class="row">
      <div class="col-md-12">
        <p id="contacts_header" class="section__title">Get in touch_</p>
      </div>
    </div>
    <div class="row contacts">
      <div class="col-md-5 col-lg-4">
        <div class="contacts__list">
          <dl class="contact-list">
            <dt>Phone:</dt>
            <dd><a href="tel:<%= Settler.profile_phone.value %>"><%= number_to_phone(Settler.profile_phone.value, area_code: true, country_code: 94) %></a></dd>
            <dt>Skype:</dt>
            <dd><a href="skype:<%= Settler.profile_skype.value %>"><%= Settler.profile_skype.value %></a></dd>
            <dt>Email:</dt>
            <dd><a href="mailto:<%= Settler.profile_email.value %>"><%= Settler.profile_email.value %></a></dd>
          </dl>
        </div>
        <% if SocialLink.active.where(link_type: :any).or(SocialLink.active.where(link_type: :footer)).any? %>
          <div class="contacts__social">
            <ul>
              <% SocialLink.active.where(link_type: :any).or(SocialLink.active.where(link_type: :footer)).order(:order).each do |social| %>
                <li><a href="<%= social.link %>" target="_blank"><%= social.name %></a></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
      <div class="col-md-7 col-lg-5">
        <div class="contacts__form">
          <p class="contacts__form-title">Or just write me a letter here_</p>
          <form class="js-form">
            <div class="form-group">
              <input class="form-field js-field-name" type="text" placeholder="Your name" required>
              <span class="form-validation"></span>
              <span class="form-invalid-icon"><i class="mdi mdi-close" aria-hidden="true"></i></span>
            </div>
            <div class="form-group">
              <input class="form-field js-field-email" type="email"  placeholder="Your e-mail" required>
              <span class="form-validation"></span>
              <span class="form-invalid-icon"><i class="mdi mdi-close" aria-hidden="true"></i></span>
            </div>
            <div class="form-group">
              <textarea class="form-field js-field-message" placeholder="Type the message here" required></textarea>
              <span class="form-validation"></span>
              <span class="form-invalid-icon"><i class="mdi mdi-close" aria-hidden="true"></i></span>
            </div>
            <button class="site-btn site-btn--form" type="submit" value="Send">Send</button>
          </form>
        </div>
        <div class="footer">
          <p>Â© <%= Time.now.year %> Banura Randika. All Rights Reserved</p>
        </div>
      </div>
    </div>
  </div>
<% if SiteDocument.active.where(slug: "contact_background_image").exists? && SiteDocument.active.where(slug: "contact_background_image").first.document.present? %>
  </div>
<% else %>
  </div>
<% end %>